<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section>
        <%= gravatar_for @user, size: 178 %>
        <p><h1><%= @user.name %></h1></p>
		<% if @user.instructor %>
			<p><span class="badge">Instructor</span></p> 
		<% end %>	
		<p><h1><%= @user.class_count %> classes left</h1></p>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
      <%= @user.desc %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
      <h3>Posts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>