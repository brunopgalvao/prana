<li>
  <%= gravatar_for user, size: 88 %>
  <% if signed_in? %>
    <%= link_to user.name, user %>
  <% else %>
    <%= user.name %>
  <% end %>
  <% if can? :destroy, @user %>
  	| <%= link_to "Edit", edit_user_path(user) %>
    | <%= link_to "Delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
</li>
