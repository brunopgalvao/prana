<li>
  <%= gravatar_for user, size: 88 %>
  <% if signed_in? %>
    <%= link_to user.name, user %>
  <% else %>
    <%= user.name %>
  <% end %>
  <% if can? :destroy, @user %>
  	| <%= link_to "", edit_user_path(user), :class => "glyphicon glyphicon-edit" %>
    | <%= link_to "", user, method: :delete,
                                  data: { confirm: "You sure?" }, :class => "glyphicon glyphicon-trash" %>
  <% end %>
</li>
