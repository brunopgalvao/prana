<% provide(:title, "Edit Class") %> 
<h1></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@yoga_class) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :desc %>
      <%= f.text_field :desc %>
	  
      <%= f.label :day %>
      <%= f.text_field :day %>

      <%#= f.label :time %>
      <%#= f.text_field :time, :value => @yoga_class.time.strftime('%l:%M %p') %>
	<div class="field">
		<%= time_select :yoga_class, :time, {ampm: true} %>
	</div>
	  <%= f.label :instructor %>
	  <%= f.text_field :instructor %>
	  
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>